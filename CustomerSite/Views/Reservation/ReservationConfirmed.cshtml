@model Reservation

<h2 class="text-center">Thank you, @Model.Customer.FirstName!</h2>
<p class="text-center">
    Your reservation for bike @Model.BikeId has been requested.
    An email with reservation details has been sent to <em>@Model.Customer.EmailAddress</em>
</p>
<p class="text-center">
    <strong>
        Your card has been charged @Model.GrandTotal.ToString("C2")
    </strong>
</p>
<p class="text-center">
    Please return <em>no later than</em> @Model.DateDue.ToShortDateString() to avoid late penalty
</p>
<p class="text-center">
    <a asp-controller="Home" asp-action="Index"
        class="btn btn-primary rounded-pill">
        <strong>Home</strong>
    </a>
</p>
